# GitHub Personal Access Token with repo or admin:org scope
GH_TOKEN=your_github_personal_access_token

# GitHub owner (username or organization name)
GH_OWNER=your_github_username_or_org

# GitHub repository name (optional - if not set, registers as org-level runner)
GH_REPOSITORY=your_repository_name

# Runner name (optional - defaults to container hostname)
RUNNER_NAME=my-runner

# Runner labels (optional - comma-separated)
RUNNER_LABELS=self-hosted,Linux,x64

# Runner work directory (optional)
RUNNER_WORKDIR=_work

# Runner group (optional - only for organization runners)
RUNNER_GROUP=Default
